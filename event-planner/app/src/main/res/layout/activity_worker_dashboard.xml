<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.WorkerDashboardActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Marko Radetic"
                android:fontFamily="sans-serif"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/purple_dark">
            </TextView>

            <TextView
                android:layout_marginTop="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Personal info"
                android:fontFamily="sans-serif"
                android:textSize="22sp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:layout_weight="1">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="4dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/phone"
                        android:layout_marginRight="2dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0628562016"
                        android:textSize="16dp"
                        android:layout_marginLeft="2dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="4dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/email"
                        android:layout_marginRight="2dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="markoradetic67@gmail.com"
                        android:textSize="16dp"
                        android:layout_marginLeft="2dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="4dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/location"
                        android:layout_marginRight="2dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Podunavci, Serbia"
                        android:textSize="16dp"
                        android:layout_marginLeft="2dp"/>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_marginTop="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Schedule date span"
                android:fontFamily="sans-serif"
                android:textSize="22sp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_marginBottom="8dp">
            </TextView>


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:scrollbarAlwaysDrawHorizontalTrack="false"
                android:fadeScrollbars="false">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="12dp">

                    <RadioButton
                        android:background="@drawable/custom_radio_btn_selector"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@color/transparent"
                        android:textAlignment="center"
                        android:text="01.01.2024 - 20.01.2024."
                        android:layout_marginRight="18sp"/>

                    <RadioButton
                        android:background="@drawable/custom_radio_btn_selector"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@color/transparent"
                        android:textAlignment="center"
                        android:text="01.01.2024 - 20.01.2024."
                        android:layout_marginRight="18sp"/>

                    <RadioButton
                        android:background="@drawable/custom_radio_btn_selector"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@color/transparent"
                        android:textAlignment="center"
                        android:text="01.01.2024 - 20.01.2024."
                        android:layout_marginRight="18sp"/>

                </RadioGroup>

            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>